<RuntimeEditor xmlns="MarkLight">
  <UserInterface>
    <Region Height="5%" Width="100%" Alignment="TopLeft">
      <Group Orientation="Horizontal" Alignment="TopLeft" Margin="5,5,5,5">
          <Button Text="File" FontSize="12" Width="50" Height="20"></Button>
      </Group>
    </Region>
    <Region Height="95%" Alignment="BottomLeft" Width="200" Margin="0,5,0,0">
      <Region Width="90%" Alignment="Left">
        <TabPanel Style="Menu" Margin="10,10,10,10">
          <Tab Text="Terrain">
            <TabHeader Style="Menu" FontSize="10" Height="20"/>
            <Group Spacing="0px" Orientation="Vertical" ContentAlignment="Left">
              <RadioButton Text="---" FontSize="10" RadioButtonHeight="12" RadioButtonWidth="12" />
              <RadioButton Text="Yes" FontSize="10" RadioButtonHeight="12" RadioButtonWidth="12" />
              <RadioButton Text="No" FontSize="10" RadioButtonHeight="12" RadioButtonWidth="12" />
            </Group>
          </Tab>
          <Tab Text="Prefabs">
            <TabHeader Style="Menu" FontSize="10" Height="20"/>
          </Tab>
        </TabPanel>
      </Region>
      <Region Width="10%" Alignment="TopRight" Margin="0,50,0,0">
        <Button Text="Hide" FontSize="12" Width="30" Height="20"  Alignment="TopRight"></Button>
      </Region>
    </Region>
  </UserInterface>
  <EventSystem />
</RuntimeEditor>